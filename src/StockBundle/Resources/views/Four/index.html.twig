                </th>
                <th>Code</th>
                <th>Nom</th>
                <th>Code Postal</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>E-mail</th>
                <th>Type</th>
                <th></th>
            </tr>
        </thead> 
        <tbody>
          {% for prod in four %}
            <tr class="odd gradeX">
                <td>
                    <input type="checkbox" class="checkboxes" value="1"/>
                </td>
                <td>{{ prod.code }}</td>
                <td>{{ prod.nom }}</td>
                <td>{{ prod.codePostal.nom}} - {{prod.codePostal.ville.nom}}</td>
                <td>{{ prod.telephone }}</td>
                <td>{{ prod.adresse }}</td>
                <td>{{ prod.email }}</td>
                <td>{{ prod.type }}</td>
                <td>
                	<a href="{{path('updateUser',{'id':prod.id})}}" class="btn btn-icon-only btn-circle blue"><i class="fa fa-pencil"></i></a>
                    <a href="{{path('delFour',{'id':prod.id})}}" class="btn btn-icon-only btn-circle red" onclick="return confirm('Voulez-vous vraiment supprimer cette informations ?');"> <i class="fa fa-times"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
